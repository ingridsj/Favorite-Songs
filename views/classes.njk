{% extends "layout.njk" %}

{% block head %}

<title>Music | Ingrid Almeida</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">

{% endblock %}

{% block content %}

    <section class="sectionCards">

        {% for item in items %}
            <div class="card" id="{{item.id}}">

                <div class="cardImageContainer {{ 'featuredWrapper' if item.featured }}">
                    <img src="{{item.image}}" alt="cardOne">
                    {% if item.featured %}
                        <div class="featured">Featured</div>
                    {% endif %} 
                </div>

                <div class="cardDate">
                    <p>{{item.date}}</p>
                </div>

                <div class="cardContent">
                    <h1>{{item.title}}</h1>
                    <h2>{{item.subtitle}}</h2>
                </div>

                <div class="cardInfo">
                    <p>{{item.description}}</p>                
                </div>
            </div>
        {% endfor %}

    </section>

    <div class="modalOverlay">
        <div class="modal">
            <a class="closeModal">
                <i class="material-icons">close</i>
            </a>
            <div class="modalContent">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="script.js"></script>

    {% endblock %}