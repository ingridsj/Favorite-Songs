{% extends "layout.njk" %}

{% block head %}

<title>Music | Ingrid Almeida</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">

{% endblock %}

{% block content %}

    <section class="sectionCards">

        {% for item in items %}
            <div class="card" id="{{item.id}}">

                <div class="cardImageContainer">
                    <img src="{{item.image}}" alt="cardOne">
                </div>

                <div class="cardDate">
                    <p>{{item.date}}</p>
                </div>

                <div class="cardContent">
                    <h1>{{item.title}}</h1>
                    <h2>{{item.subtitle}}</h2>
                </div>

                <div class="cardInfo">
                    <p>{{item.description}}</p>                
                </div>
            </div>
        {% endfor %}

    </section>

    <div class="modalOverlay">
        <div class="modal">
            <a class="closeModal">
                <i class="material-icons">close</i>
            </a>
            <div class="modalContent">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

<footer>
    <div class="socialNetworks">
        <a href="https://github.com/ingridsj" target="_blank"><img src="github.png" alt="Githhub"></a>
        <a href="https://www.linkedin.com/in/ingridsjalmeida/" target="_blank"><img src="linkedin.png" alt="Linkedin"></a>
        <a href="https://www.instagram.com/_ingridsj/" target="_blank"><img src="instagram.png" alt="Instagram"></a>
    </div>
</footer>
    <script src="script.js"></script>

    {% endblock %}